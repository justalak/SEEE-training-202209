@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model WebApplication6.Models.Class

@{
    ViewData["Title"] = "Edit Class";
}

<link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

<h1>Edit Class</h1>

<hr />
<div class="row">
    <div class="col-md-10">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdClass" class="control-label"></label>
                <input readonly asp-for="IdClass" class="form-control" />
                <span asp-validation-for="IdClass" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NameClass" class="control-label"></label>
                <input asp-for="NameClass" class="form-control" />
                <span asp-validation-for="NameClass" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdTeacher" class="control-label"></label>
                <select asp-for="IdTeacher" asp-items="@ViewBag.IdTeacher" class="form-control">
                    <option value="0">Choose a Teacher</option>
                </select>
                <span asp-validation-for="IdTeacher" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
