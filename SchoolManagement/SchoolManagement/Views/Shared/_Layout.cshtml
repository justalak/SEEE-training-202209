<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SchoolManagement</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.8/css/all.css">
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="nav">
        <input type="checkbox" id="nav-check">
        <div class="nav-header">
            <div class="nav-title">
                DKH.Venn
            </div>
        </div>
        <div class="nav-links">
            <ul>
                <li class="active"><a asp-controller="Home" asp-action="Index">Home</a></li>
                <li >
                    <button class="btn mx-auto" type="button" data-bs-toggle="offcanvas" data-bs-target="#student">
                        <p class="h3 text-light">Student</p>
                    </button>
                    <div class="offcanvas offcanvas-start" id="student">
                        <div class="offcanvas-header">
                            <h1 class="offcanvas-title">Choose Options</h1>
                            <button type="button" class="btn-close" data-bs-dismiss="offcanvas"></button>
                        </div>
                        <div class="offcanvas-body">
                            <a asp-controller="Student" asp-action="Show">
                                <button type="button" class="btn btn-primary w-100">
                                    <p class="h3 text-light ">View Student Information</p>
                                </button>

                            </a>

                            <a asp-controller="Student" asp-action="Add">
                                <button type="button" class="btn btn-primary w-100">
                                    <p class="h3 text-light ">Add Student </p>
                                </button>

                            </a>

                            <a asp-controller="Student" asp-action="Edit">
                                <button type="button" class="btn btn-primary w-100">
                                    <p class="h3 text-light ">Edit Student </p>
                                </button>

                            </a>
                        </div>
                    </div>
                </li>
                <li>
                    <button class="btn mx-auto" type="button" data-bs-toggle="offcanvas" data-bs-target="#teacher">
                        <p class="h3 text-light">Teacher</p>
                    </button>
                    <div class="offcanvas offcanvas-start" id="teacher">
                        <div class="offcanvas-header">
                            <h1 class="offcanvas-title">Choose Options</h1>
                            <button type="button" class="btn-close" data-bs-dismiss="offcanvas"></button>
                        </div>
                        <div class="offcanvas-body">
                            <a asp-controller="Teacher" asp-action="Show">
                                <button type="button" class="btn btn-primary w-100">
                                    <p class="h3 text-light ">View Teacher Information</p>
                                </button>
                                
                            </a>
                            
                            <a asp-controller="Teacher" asp-action="Add">
                                <button type="button" class="btn btn-primary w-100">
                                    <p class="h3 text-light ">Add Teacher </p>
                                </button>
                                
                            </a>
                            
                            <a asp-controller="Teacher" asp-action="Edit">
                                <button type="button" class="btn btn-primary w-100">
                                    <p class="h3 text-light ">Edit Teacher </p>
                                </button>
                                
                            </a>
                        </div>
                    </div>
                </li>
                <li>
                    <button class="btn mx-auto" type="button" data-bs-toggle="offcanvas" data-bs-target="#class">
                        <p class="h3 text-light">Class</p>
                    </button>
                    <div class="offcanvas offcanvas-start" id="class">
                        <div class="offcanvas-header">
                            <h1 class="offcanvas-title">Choose Options</h1>
                            <button type="button" class="btn-close" data-bs-dismiss="offcanvas"></button>
                        </div>
                        <div class="offcanvas-body">
                            <a asp-controller="Class" asp-action="Show">
                                <button type="button" class="btn btn-primary w-100">
                                    <p class="h3 text-light ">View Class Information</p>
                                </button>

                            </a>

                            <a asp-controller="Class" asp-action="Add">
                                <button type="button" class="btn btn-primary w-100">
                                    <p class="h3 text-light ">Add Class </p>
                                </button>

                            </a>

                            <a asp-controller="Class" asp-action="Edit">
                                <button type="button" class="btn btn-primary w-100">
                                    <p class="h3 text-light ">Edit Class </p>
                                </button>

                            </a>
                        </div>
                    </div>
                </li>
                <li>
                    <a asp-controller="Home" asp-action="Contact">Other</a>
                </li>
                <li>
                    <a class="icon text-black-50">
                        <i class="fa fa-brands fa-twitter"></i>
                        <i class="fa fa-brands fa-linkedin"></i>
                        <i class="fa fa-brands fa-youtube"></i>
                    </a>
                </li>
                
            </ul>
            
        </div>
    </div>
    <div class="container" style="bg-danger">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    
    @RenderSection("Scripts", required: false)
</body>
</html>
