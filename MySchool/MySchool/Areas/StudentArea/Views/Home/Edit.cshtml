            <label asp-for="Password" class="col-sm-2 col-form-label"></label>
            <div class="input-group mb-3 col-sm-10">
                <div class="input-group-prepend">
                    <div class="input-group-text">
                        <input type="radio" aria-label="Checkbox for following text input" id="checkPassChange" onclick="PassChange(this)">
                    </div>
                </div>
                <input asp-for="Password" value="@Model.Password" class="form-control" id="inputPassChange" type="password" disabled="disabled" />
            </div>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>*@
        <div class="form-group" hidden>
            <label asp-for="Password" class="control-label"></label>
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="button">
            <input type="submit" value="Save" class="btn btn-primary btn-sm btn-block" />
        </div>
    </form>
</div>

<script>
    function PassChange(event){
        var check = document.getElementById("inputPassChange");
        check.disabled = event.checked ? false : true;
    }
</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
