@model MySchool.Models.Student

@{
    ViewData["Title"] = "Detail";
}

<div class="h-100 position-relative">
    <div style="width:700px; padding: 20px; border-radius:10px; background:white; top: 40%; left: 50%; transform: translate(-50%, -50%)" class="position-absolute">

        <div class="form-group row">
            <label for="inputEmail3" class="col-sm-2 col-form-label">User Id</label>
            <div class="col-sm-10">
                <input value="@Model.IdStudent" class="form-control" readonly>
            </div>
        </div>
        <div class="form-group row">
            <label for="inputPassword3" class="col-sm-2 col-form-label">Name</label>
            <div class="col-sm-10">
                <input value="@Model.NameStudent" class="form-control" readonly>
            </div>
        </div>
        <div class="form-group row">
            <label for="inputPassword3" class="col-sm-2 col-form-label">Email</label>
            <div class="col-sm-10">
                <input value="@Model.Email" class="form-control" readonly>
            </div>
        </div>
        <div class="form-group row">
            <label for="inputPassword3" class="col-sm-2 col-form-label">Gender</label>
            <div class="col-sm-10">
                <input value="@Model.Gender" class="form-control" readonly>
            </div>
        </div>
        <div class="form-group row">
            <label for="inputPassword3" class="col-sm-2 col-form-label">PhoneNumber</label>
            <div class="col-sm-10">
                <input value="@Model.PhoneNumber" class="form-control" readonly>
            </div>
        </div>
        <div class="form-group row">
            <label for="inputPassword3" class="col-sm-2 col-form-label">Score</label>
            <div class="col-sm-10">
                <input value="@Model.Score" class="form-control" readonly>
            </div>
        </div>
        <div class="form-group row">
            <label for="inputPassword3" class="col-sm-2 col-form-label">IdClass</label>
            <div class="col-sm-10">
                <input value="@Model.IdClass" class="form-control" readonly>
            </div>
        </div>

        <div class="btn-group btn-group-sm btn-lg btn-block" role="group" aria-label="Basic example">
            <a asp-action="Edit" class="btn btn-primary btn-lg active" role="button" aria-pressed="true">Edit</a>
            <a asp-action="Logout" class="btn btn-secondary btn-lg active" role="button" aria-pressed="true">Logout</a>
        </div>
    </div>
</div>
