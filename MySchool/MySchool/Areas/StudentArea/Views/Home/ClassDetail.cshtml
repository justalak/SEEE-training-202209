
<div>
    <h4>Class</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            IdCLass
        </dt>
        <dd class="col-sm-10">
            @ViewBag.cl.IdClass
        </dd>
        <dt class="col-sm-2">
            Class
        </dt>
        <dd class="col-sm-10">
            @ViewBag.cl.NameClass
        </dd>
        <dt class="col-sm-2">
            Teacher
        </dt>
        <dd class="col-sm-10">
            @ViewBag.Teacher.NameTeacher
        </dd>
    </dl>
</div>

<div class="row py-5">
    <div class="col-lg-15 mx-auto">
        <div class="card rounded shadow border-0">
            <div class="card-body p-5 bg-white rounded">
                <div class="table-responsive">
                    <table id="example" style="width:100%" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Fullname</th>
                                <th>Gender</th>
                                <th>Email</th>
                                <th>Phone Number</th>
                                <th>Score</th>
                                <th>IdClass</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in ViewBag.Students)
                            {
                                <tr>
                                    <td>@item.IdStudent</td>
                                    <td>@item.NameStudent</td>
                                    <td>@item.Gender</td>
                                    <td>@item.Email</td>
                                    <td>@item.PhoneNumber</td>
                                    <td>@item.Score</td>
                                    <td>@item.IdClass</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>