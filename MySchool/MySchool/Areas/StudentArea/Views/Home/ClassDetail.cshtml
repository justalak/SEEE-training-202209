
<div class="position-relative" style="height:200px;">
    <div style="width:700px; padding: 20px; border-radius:10px; background:white; top: 50%; left: 50%; transform: translate(-50%, -50%)" class="position-absolute">

        <div class="form-group row">
            <label for="inputEmail3" class="col-sm-2 col-form-label">IdClass</label>
            <div class="col-sm-10">
                <input value="@ViewBag.cl.IdClass" class="form-control" readonly>
            </div>
        </div>
        <div class="form-group row">
            <label for="inputPassword3" class="col-sm-2 col-form-label">NameClass</label>
            <div class="col-sm-10">
                <input value="@ViewBag.cl.NameClass" class="form-control" readonly>
            </div>
        </div>
        <div class="form-group row">
            <label for="inputPassword3" class="col-sm-2 col-form-label">NameTeacher</label>
            <div class="col-sm-10">
                <input value="@ViewBag.Teacher.NameTeacher" class="form-control" readonly>
            </div>
        </div>
    </div>
</div>


<div class="row py-5">
    <div class="col-lg-15 mx-auto">
        <div class="card rounded shadow border-0">
            <div class="card-body p-5 bg-white rounded">
                <div class="table-responsive">
                    <table id="example" style="width:100%" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Fullname</th>
                                <th>Gender</th>
                                <th>Email</th>
                                <th>Phone Number</th>
                                <th>Score</th>
                                <th>IdClass</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in ViewBag.Students)
                            {
                                <tr>
                                    <td>@item.IdStudent</td>
                                    <td>@item.NameStudent</td>
                                    <td>@item.Gender</td>
                                    <td>@item.Email</td>
                                    <td>@item.PhoneNumber</td>
                                    <td>@item.Score</td>
                                    <td>@item.IdClass</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>