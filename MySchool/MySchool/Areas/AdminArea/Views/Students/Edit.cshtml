@model MySchool.Models.Student

@{
    ViewData["Title"] = "Edit";
}

<div class="h-100 position-relative">
    <form asp-action="Edit" style="width:700px; padding: 20px; border-radius:10px; background:white; top: 40%; left: 50%; transform: translate(-50%, -50%)" class="position-absolute">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="IdStudent" />
        <div class="form-group row">
            <label asp-for="NameStudent" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="NameStudent" class="form-control" />
            </div>
            <span asp-validation-for="NameStudent" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <label asp-for="Gender" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Gender" class="form-control" />
            </div>
            <span asp-validation-for="Gender" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <label asp-for="Email" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Email" class="form-control" />
            </div>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <label asp-for="PhoneNumber" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="PhoneNumber" class="form-control" />
            </div>
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <label asp-for="Score" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Score" class="form-control" />
            </div>
            <span asp-validation-for="Score" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <label asp-for="IdClass" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <select asp-for="IdClass" asp-items="@ViewBag.IdClass" class="form-control">
                    <option value="0">Choose a Class</option>
                </select>
            </div>
            <span asp-validation-for="IdClass" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <label asp-for="Password" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Password" class="form-control" />
            </div>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </form>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
