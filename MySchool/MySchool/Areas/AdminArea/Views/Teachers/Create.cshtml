@model Teacher

@{
    ViewData["Title"] = "Create";
}

<div class="h-100 position-relative">
    <form asp-action="Create" style="width:700px; padding: 20px; border-radius:10px; background:white; top: 40%; left: 50%; transform: translate(-50%, -50%)" class="position-absolute">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <label asp-for="NameTeacher" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="NameTeacher" class="form-control" />
            </div>
            <span asp-validation-for="NameTeacher" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <label asp-for="Email" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Email" class="form-control" />
            </div>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <label asp-for="Password" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Password" class="form-control" type="password" required />
            </div>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </form>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
